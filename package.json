{
  "name": "recursor",
  "productName": "Recursor",
  "version": "1.0.0",
  "description": "Recursor - Cursor Account Management Tool",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:prod": "NODE_ENV=production electron-forge make",
    "make:all": "electron-forge make --platform=darwin,win32,linux",
    "make:windows": "electron-forge make --platform=win32",
    "make:linux": "electron-forge make --platform=linux",
    "make:macos": "electron-forge make --platform=darwin",
    "build:all": "node scripts/build-all.js",
    "build:release": "NODE_ENV=production node scripts/build-all.js",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "autoprefixer": "^10.4.21",
    "canvas": "^3.1.2",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.11.0",
    "electron": "37.3.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "html-webpack-plugin": "^5.6.4",
    "node-loader": "^2.1.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "better-sqlite3": "^12.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.1"
